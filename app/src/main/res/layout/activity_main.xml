<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/rl_course_shopping_cart"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" >

            <ImageView
                android:id="@+id/iv_course_shopping_cart_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/coursedetails_shoppingcart_icon_normal"  />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_course_shopping_cart_icon"
                android:gravity="center"
                android:text="购物车"
                android:textColor="#858C96"
                android:textSize="10sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_xesmall_detail_bottom_add_cart"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="加入购物车"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="14dp"
            android:textStyle="bold"
            android:background="@color/colorAccent"
            android:visibility="visible" />

    </RelativeLayout>


</RelativeLayout>